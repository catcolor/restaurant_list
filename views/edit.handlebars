<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto my-4">

        <div class="form-group">
          <label for="name"><span><i class="far fa-address-card pr-2"></i></span>店名：</label>
          <input type="text" class="form-control" id="name" placeholder="name" name="name"
            value="{{ restaurant.name }}">
        </div>

        <div class="form-group">
          <label for="category"><span><i class="fas fa-utensils pr-2"></i></span>類別：</label>
          <input type="text" class="form-control" id="category" placeholder="name" name="category"
            value="{{ restaurant.category }}">
        </div>

        <div class="form-group">
          <label for="location"><span><i class="fas fa-map-marker-alt pr-2"></i></span>地址：</label>
          <input type="text" class="form-control" id="location" placeholder="name" name="location"
            value="{{ restaurant.location }}">
        </div>

        <div class="form-group">
          <label for="phone"><span><i class="fas fa-mobile-alt pr-2"></i></span>電話：</label>
          <input type="text" class="form-control" id="phone" placeholder="name" name="phone"
            value="{{ restaurant.phone }}">
        </div>

        <div class="form-group">
          <label for="image"><span><i class="fas fa-image pr-2"></i></span>圖片連結：</label>
          <input type="text" class="form-control" id="image" placeholder="name" name="image"
            value="{{ restaurant.image }}">
        </div>

        <div class="form-group">
          <label for="description"><span><i class="fas fa-keyboard pr-2"></i></span>介紹：</label>
          <textarea class="form-control" id="description" rows="3" placeholder="name"
            name="description">{{ restaurant.description }}</textarea>
        </div>

        <div class="d-flex justify-content-end">
          <a class="btn btn-link mr-2" href="/" role="button">Back</a>
          <button type="submit" class="btn btn-info">Save</button>
        </div>

      </div>
    </div>
  </div>
</form>