<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto my-4">
        <h4 class="mb-4 text-danger"> 標示 * 為必填欄位 </h4>
        <div class="form-group">
          <label for="name"><span><i class="far fa-address-card pr-2"></i></span>店名 <span
              class="text-danger">*</span></label>
          <input type="text" class="form-control" id="name" placeholder="name" name="name" value="{{ restaurant.name }}"
            required>
        </div>

        <div class="form-group">
          <label for="category"><span><i class="fas fa-utensils pr-2"></i></span>類別 <span
              class="text-danger">*</span></label>
          <input type="text" class="form-control" id="category" placeholder="name" name="category"
            value="{{ restaurant.category }}" required>
        </div>

        <div class="form-group">
          <label for="rating"><span><i class="fas fa-star pr-2"></i></span>分數 <span class="text-danger">*</span></label>
          <input type="number" class="form-control" id="rating" min="0" max="5" step="0.1" placeholder="name"
            name="rating" value="{{ restaurant.rating }}" required>
        </div>

        <div class="form-group">
          <label for="location"><span><i class="fas fa-map-marker-alt pr-2"></i></span>地址 <span
              class="text-danger">*</span></label>
          <input type="text" class="form-control" id="location" placeholder="name" name="location"
            value="{{ restaurant.location }}" required>
        </div>

        <div class="form-group">
          <label for="google_map"><span><i class="fas fa-map-marker-alt pr-2"></i></span>Google 地圖連結 <span
              class="text-danger">*</span></label>
          <input type="text" class="form-control" id="google_map" placeholder="name" name="google_map"
            value="{{ restaurant.google_map }}" required>
        </div>

        <div class="form-group">
          <label for="phone"><span><i class="fas fa-mobile-alt pr-2"></i></span>電話 <span
              class="text-danger">*</span></label>
          <input type="text" class="form-control" id="phone" placeholder="name" name="phone"
            value="{{ restaurant.phone }}" required>
        </div>

        <div class="form-group">
          <label for="image"><span><i class="fas fa-image pr-2"></i></span>圖片連結 <span
              class="text-danger">*</span></label>
          <input type="text" class="form-control" id="image" placeholder="name" name="image"
            value="{{ restaurant.image }}" required>
        </div>

        <div class="form-group">
          <label for="description"><span><i class="fas fa-keyboard pr-2"></i></span>介紹 <span
              class="text-danger">*</span></label>
          <textarea class="form-control" id="description" rows="3" placeholder="name" name="description"
            required>{{ restaurant.description }}</textarea>
        </div>

        <div class="d-flex justify-content-end">
          <a class="btn btn-link mr-2" href="/" role="button">Back</a>
          <button type="submit" class="btn btn-info">Save</button>
        </div>

      </div>
    </div>
  </div>
</form>