<form action="/restaurants" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <div class="form-group">
          <label for="name"><span><i class="fas fa-utensils pr-2"></i></span>名字：</label>
          <input type="text" class="form-control" id="name" placeholder="name" name="name">
        </div>

        <div class="form-group">
          <label for="category"><span><i class="fas fa-utensils pr-2"></i></span>類別：</label>
          <input type="text" class="form-control" id="category" placeholder="name" name="category">
        </div>

        <div class="form-group">
          <label for="location"><span><i class="fas fa-map-marker-alt pr-2"></i></span>地址：</label>
          <input type="text" class="form-control" id="location" placeholder="name" name="location">
          <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </div>

        <div class="form-group">
          <label for="phone"><span><i class="fas fa-mobile-alt pr-2"></i></span>電話：</label>
          <input type="text" class="form-control" id="phone" placeholder="name" name="phone">
        </div>

        <div class="form-group">
          <label for="description"><span><i class="fas fa-mobile-alt pr-2"></i></span>介紹：</label>
          <input type="text" class="form-control" id="description" placeholder="name" name="description">
        </div>

        <div class="form-group">
          <label for="image"><span><i class="fas fa-mobile-alt pr-2"></i></span>圖片連結：</label>
          <input type="text" class="form-control" id="image" placeholder="name" name="image">
        </div>

      </div>
      <a class="btn btn-link" href="/" role="button">Back</a>
    </div>
    <form action="/restaurants/{{ restaurant._id }}/delete" method="POST" style="display: inline;">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <button type="submit" class="btn btn-info">Create</button>
  </div>

</form>